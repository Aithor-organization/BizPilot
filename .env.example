# ===========================================
# BizPilot - Environment Variables
# ===========================================
# cp .env.example .env

# -------------------------------------------
# Database (PostgreSQL with pgvector)
# -------------------------------------------
DATABASE_URL="postgresql://postgres:password@localhost:5432/bizpilot?schema=public"

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_URL="redis://localhost:6379"

# -------------------------------------------
# JWT & Auth
# -------------------------------------------
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# -------------------------------------------
# OpenAI (Embeddings & LLM)
# -------------------------------------------
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxx"
BIZPILOT_LLM_PROVIDER="openai"
BIZPILOT_LLM_MODEL="gpt-4o-mini"

# -------------------------------------------
# Dify (Optional)
# -------------------------------------------
DIFY_API_BASE_URL="https://api.dify.ai/v1"
DIFY_API_KEY="app-xxxxxxxxxxxxxxxxxxxxxxxx"

# -------------------------------------------
# Payment (PortOne)
# -------------------------------------------
PORTONE_IMP_KEY="imp_xxxxxxxx"
PORTONE_IMP_SECRET="xxxxxxxxxxxxxxxxxxxxxxxx"
PORTONE_MERCHANT_ID="your_merchant_id"
PORTONE_WEBHOOK_SECRET="your-webhook-secret"

# -------------------------------------------
# Encryption
# -------------------------------------------
ENCRYPTION_KEY="32-byte-encryption-key-here-ok!"

# -------------------------------------------
# File Upload
# -------------------------------------------
UPLOAD_TEMP_DIR="/tmp/bizpilot-uploads"
UPLOAD_MAX_SIZE_MB=10
UPLOAD_TTL_MINUTES=30

# -------------------------------------------
# App Settings
# -------------------------------------------
NODE_ENV="development"
BACKEND_PORT=4000
FRONTEND_PORT=3000
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:4000"

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
